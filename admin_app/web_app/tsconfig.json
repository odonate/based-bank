{
    "compilerOptions": {
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true,
        "outDir": "./distribution/",
	"sourceMap": true,
        "allowJs": true,
        "target": "es5",
	"jsx": "react",
        // types option has been previously configured
        "types": [
            // add node as an option
            "node"
        ],
        // typeRoots option has been previously configured
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ]

    },
    "exclude": [
        "node_modules",
    ],
}
